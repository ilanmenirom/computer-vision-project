{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Plot Samples of Faces Datasets",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/plot_samples_of_faces_datasets.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train Network",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_main.py",
            "console": "integratedTerminal",
            "args": [
                "-d", "synthetic_dataset",
                "-m", "XceptionBased",
                "--lr", "0.001",
                "-b", "32",
                "-e", "5",
                "-o", "Adam"
            ],
            "justMyCode": true
        },
        {
            "name": "Plot Accuracy and Loss",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/plot_accuracy_and_loss.py",
            "console": "integratedTerminal",
            "args": [
                "-m", "SimpleNet",
                "-d", "synthetic_dataset",
                "-j", "out/synthetic_dataset_SimpleNet_Adam.json",
            ],
            "justMyCode": true
        }
    ]
}